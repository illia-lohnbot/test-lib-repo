{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "datatypes/*": ["datatypes/src/*"],
      "helpers/*": ["helpers/src/*"]
    },
    "outDir": "./dist",
    "rootDir": ".",
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["datatypes", "helpers"]
}
